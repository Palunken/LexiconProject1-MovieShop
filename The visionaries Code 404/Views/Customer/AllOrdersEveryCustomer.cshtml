@model List<The_visionaries_Code_404.Models.OrderViewModel>

@{
    ViewData["Title"] = "All Orders for Every Customer";

}

<center><h2 class="fw-bold">All Orders for Every Customer</h2></center>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Order Date</th>
                <th>Total Cost</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <partial name="_OrderPartial" model="order" />
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        No orders found.
    </div>
}